<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        body{
            padding: 20px;
        }
        .left{

            align-items: center;
            justify-content: center;
            display: flex;
        }
        .bruh{
            margin: 5px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col left">
            <div class="card" style="min-width: 400px">
                <h5 class="card-header">To do Form</h5>
                <div class="card-body">
                    {% for content in app.session.flashBag.get('error') %}
                        <div class="alert alert-danger" role="alert">
                            {{ content }}
                        </div>
                    {% endfor %}
                    {% for content in app.session.flashBag.get('sucess') %}
                        <div class="alert alert-success" role="alert">
                            {{ content }}
                        </div>
                    {% endfor %}

                    <form method="post" onsubmit="return addElement(this)" class="action">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label" >Title</label>
                            <input type="text" id="title" class="form-control" required>
                            <div class="form-text">Le titre de votre ToDo.</div>
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Content</label>
                            <textarea class="form-control" id="Content" rows="3" required></textarea>
                            <div class="form-text">Le contenu de votre ToDo.</div>
                        </div>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col" style="flex-wrap: wrap; overflow-y: auto;">
            {% for name,content in app.session.get('todos') %}
                <div class="card" style="width: 18rem;margin: 5px;">
                    <div class="card-body">
                        <h5 class="card-title">{{ name }}</h5>
                        <p class="card-text">{{ content }}</p>
                        <div class="d-flex" style="justify-content: center;align-items: center;">
                            <a class="btn btn-secondary" data-bs-toggle="collapse" href="#collapseExample{{ name }}" role="button" aria-expanded="false" aria-controls="collapseExample{{ name }}">Modifier</a>

                            <a href="#" class="btn btn-danger bruh" onclick="return deleteElement('{{ name }}', this)">Supprimer</a>
                        </div>
                        <div class="collapse" id="collapseExample{{ name }}">
                            <div class="card card-body">
                                <form method="post" onsubmit="return editElement('{{ name }}',this)" class="action">
                                    <div class="mb-3">
                                        <input type="text" id="titleEdit{{ name }}" class="form-control" aria-label="Disabled input example" disabled placeholder="Title" value="{{ name }}" required>
                                    </div>
                                    <div class="mb-3">
                                        <textarea class="form-control" id="ContentEdit{{ name }}" rows="3" placeholder="Content" required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-dark">Enregistrer les Modifications</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
    <script>
            function addElement(form) {
                let title = document.querySelector('#title').value;
                let content = document.querySelector('#Content').value;
                let link = "todo/add/" + title + "/" + content;
                form.action=link;
                return true;
            }
            function editElement(name, form){
                let id1 ='#titleEdit'+name;
                let id2 ='#ContentEdit'+name;
                let title = document.querySelector(id1).value;
                let content = document.querySelector(id2).value;
                let link = "todo/edit/" + title + "/" + content;
                form.action=link;
                return true;
            }
            function deleteElement(name, a){
                let link = "todo/delete/" + name;
                a.href = link;
                return true;
            }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>
